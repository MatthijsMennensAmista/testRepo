<mvc:View controllerName="be.amista.TravisTest.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<VBox class="sapUiSmallMargin">
							<Select id="idType">
								<core:Item key="add" text="Addition"/>
								<core:Item key="subtract" text="Subtraction"/>
								<core:Item key="multiply" text="Multiplication"/>
								<core:Item key="divide" text="Division"/>
							</Select>
							<Input type="Number" id="idInput1"/>
							<Input type="Number" id="idInput2"/>
							<Button id="idCalculate" text="Calculate" press="onCalculate"/>
						</VBox>
						<Label id="idResult" class="sapUiLargeMarginTop sapUiSmallMargin"/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>